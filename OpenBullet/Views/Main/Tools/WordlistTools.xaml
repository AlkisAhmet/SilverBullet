            <GroupBox
                Margin="0,5,5,5"
                HorizontalAlignment="Left"
                Header="Remove Duplicate">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <DockPanel>
                            <Label Content="Location:" />
                            <TextBox
                                Name="locationTextBox"
                                Width="260"
                                IsReadOnly="True" />
                            <Button
                                Click="Button_Click"
                                Content="Load" />
                        </DockPanel>
                        <DockPanel>
                            <TextBlock
                                Name="loadedForDup"
                                Margin="0,8,0,0"
                                Text="Loaded: 0" />
                            <Button
                                Width="47"
                                HorizontalAlignment="Right"
                                Click="Button_Click_2">
                                Start
                            </Button>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock
                                x:Name="removedDupTextBlock"
                                Text="Removed: 0" />
                            <Button
                                Width="47"
                                HorizontalAlignment="Right"
                                Click="Button_Click_4">
                                Save
                            </Button>
                        </DockPanel>
                        <Button
                            HorizontalAlignment="Right"
                            Click="Button_Click_3">
                            Clear
                        </Button>
                        <Button
                            Width="116"
                            Margin="0,-30,0,0"
                            HorizontalAlignment="Left"
                            Click="Button_Click_1">
                            Send into wordlist
                        </Button>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>
